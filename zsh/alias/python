alias py_format="black --line-length=120 --target-version=py37"

__venv(){
    local python_version=$2
    local venv=$1
    if [ -z $python_version ]; then
        conda create -n $venv python=3.13
    else
        echo "--> Create virtual environment for python version: $python_version"
        conda create -n $venv python=$python_version
    fi
}
alias vactivate="conda deactivate && conda activate"
alias vdeactivate="conda deactivate"
alias cinstall="conda install"
